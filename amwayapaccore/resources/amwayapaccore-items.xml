<items xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="items.xsd">

    <itemtypes>

        <typegroup name="AmwayApac">
            <itemtype code="AmwayApacColorVariantProduct" extends="VariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="com.amway.apac.core.jalo.AmwayApacColorVariantProduct">
                <description>Amway Apac color variant type that contains additional attribute describing variant color.
                </description>
                <attributes>
                    <attribute qualifier="color" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>Color of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>

            <itemtype code="AmwayApacSizeVariantProduct" extends="VariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="com.amway.apac.core.jalo.AmwayApacSizeVariantProduct">
                <description>Amway Apac size variant type that contains additional attribute describing variant size.
                </description>
                <attributes>
                    <attribute qualifier="size" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>Size of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>

            <itemtype code="AmwayApacFlavourVariantProduct" extends="VariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="com.amway.apac.core.jalo.AmwayApacFlavourVariantProduct">
                <description>Amway Apac variant flavour type that contains additional attribute describing variant flavour.
                </description>
                <attributes>
                    <attribute qualifier="flavour" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>flavour of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>
        </typegroup>

    </itemtypes>
</items>
