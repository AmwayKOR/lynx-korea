		<typegroup name="Serviceability">
			<itemtype code="AbstractAmwayWarehouseServiceability"
				autocreate="true" generate="true" abstract="true">
				<description>PIN code to Warehouse mapping</description>
				<attributes>
					<attribute type="BaseSite" qualifier="site">
						<description>Base site for the postal code</description>
						<modifiers unique="true" />
						<persistence type="property" />
					</attribute>
					<attribute type="Warehouse" qualifier="warehouse">
						<description>Warehouse mapped against the postal code</description>
						<persistence type="property" />
					</attribute>
					<attribute type="Region" qualifier="region">
						<description>Region of the area</description>
						<modifiers unique="true" />
						<persistence type="property" />
					</attribute>
				</attributes>
				<indexes>
					<index name="AWSSiteIdx" unique="false">
						<key attribute="site" />
					</index>
				</indexes>
			</itemtype>

			<itemtype code="AmwayWarehouseServiceability" autocreate="true"
				generate="true" extends="AbstractAmwayWarehouseServiceability">
				<description>PIN code to warehouse mapping for Major-Minor postal code model</description>
				<deployment table="WarehouseServiceability" typecode="21006" />
				<attributes>
					<attribute type="java.lang.String" qualifier="majorPostalCode">
						<description>Major postal code of the area</description>
						<modifiers unique="true" />
						<persistence type="property" />
					</attribute>
					<attribute type="java.lang.String" qualifier="minorPostalCode">
						<description>Minor postal code of the area</description>
						<modifiers unique="true" />
						<persistence type="property" />
					</attribute>
				</attributes>
				<indexes>
					<index name="majorPostalCodeIDX" unique="false">
						<key attribute="majorPostalCode" />
					</index>
					<index name="minorPostalCodeIDX" unique="false">
						<key attribute="minorPostalCode" />
					</index>
				</indexes>
			</itemtype>

			<itemtype code="AmwayPostcodeWarehouseServiceability"
				autocreate="true" generate="true" extends="AbstractAmwayWarehouseServiceability">
				<description>Pin code to warehouse mapping for complete postal code model</description>
				<deployment table="amwayPCWHServiceability" typecode="21065" />
				<attributes>
					<attribute type="java.lang.String" qualifier="postalCode">
						<description>Postal code of the area</description>
						<modifiers unique="true" />
						<persistence type="property" />
					</attribute>
				</attributes>
			</itemtype>
			
